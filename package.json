{
  "name": "@rocklab/validation",
  "version": "2.1.35",
  "description": "A library for input validation",
  "engines": {
    "node": ">= 18",
    "npm": ">= 9"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist/",
    "compile": "tsc",
    "build": "npm run clean && npm run compile",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "npm run build",
    "test": "jest --config config/jest.config.js",
    "watch": "jest --config config/jest.config.js --watch",
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write \"src/**/*.js\"",
    "version": "standard-version",
    "release": "standard-version",
    "prerelease": "npm run release -- --prerelease"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cstn/rocklab-validation.git"
  },
  "keywords": [
    "rocklab",
    "javscript",
    "validator",
    "validation",
    "valid"
  ],
  "author": "Carsten Stein",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cstn/rocklab-validation/issues"
  },
  "homepage": "https://github.com/cstn/rocklab-validation#readme",
  "devDependencies": {
    "@babel/cli": "7.24.1",
    "@babel/core": "7.24.4",
    "@babel/eslint-parser": "7.24.1",
    "@babel/preset-env": "7.24.4",
    "@babel/preset-typescript": "7.24.1",
    "@commitlint/cli": "19.2.2",
    "@rocklab/commitlint-config": "3.2.97",
    "@rocklab/eslint-config-typescript": "3.2.97",
    "@tsconfig/node14": "14.1.2",
    "@types/jest": "29.5.12",
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "7.7.0",
    "eslint": "9.1.1",
    "eslint-config-prettier": "9.1.0",
    "husky": "9.0.11",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "lint-staged": "15.2.2",
    "prettier": "3.2.5",
    "rimraf": "5.0.5",
    "standard-version": "9.5.0",
    "ts-jest": "29.1.2",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "7.24.3",
    "@babel/polyfill": "^7.8.7"
  }
}
