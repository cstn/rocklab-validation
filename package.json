{
  "name": "@rocklab/validation",
  "version": "2.0.25",
  "description": "A library for input validation",
  "engines": {
    "node": ">= 16",
    "npm": ">= 8"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist/",
    "compile": "tsc",
    "build": "npm run clean && npm run compile",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "npm run build",
    "test": "jest --config config/jest.config.js",
    "watch": "jest --config config/jest.config.js --watch",
    "lint": "eslint src/",
    "lint:fix": "npm run lint -- --fix",
    "prettier": "prettier --write \"src/**/*.js\"",
    "version": "standard-version",
    "release": "standard-version",
    "prerelease": "npm run release -- --prerelease"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cstn/rocklab-validation.git"
  },
  "keywords": [
    "rocklab",
    "javscript",
    "validator",
    "validation",
    "valid"
  ],
  "author": "Carsten Stein",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cstn/rocklab-validation/issues"
  },
  "homepage": "https://github.com/cstn/rocklab-validation#readme",
  "devDependencies": {
    "@babel/cli": "7.17.10",
    "@babel/core": "7.17.10",
    "@babel/eslint-parser": "7.17.0",
    "@babel/preset-env": "7.17.10",
    "@babel/preset-typescript": "7.16.7",
    "@commitlint/cli": "16.2.4",
    "@rocklab/commitlint-config": "3.2.12",
    "@rocklab/eslint-config-typescript": "3.2.12",
    "@tsconfig/node14": "1.0.1",
    "@types/jest": "27.5.0",
    "@typescript-eslint/parser": "5.23.0",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "28.1.0",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2",
    "standard-version": "9.3.2",
    "ts-jest": "28.0.2",
    "typescript": "4.6.4"
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "7.17.10",
    "@babel/polyfill": "^7.8.7"
  }
}
